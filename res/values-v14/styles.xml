<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/Widget.Styled.ActionBar</item>
        
        <item name="android:actionBarItemBackground">?attr/selectableItemBackground</item>
        
        <item name="android:actionButtonStyle">@style/Widget.Styled.ActionButton</item>
        <item name="android:windowBackground">@drawable/background_main</item>
        <item name="android:listSelector">@drawable/abc_list_selector_holo_dark</item>
        
        <item name="android:spinnerDropDownItemStyle">@style/Widget.AppCompat.Light.DropDownItem.Spinner</item>
        
        <item name="android:selectableItemBackground">@drawable/item_background</item>
        
        <item name="android:actionDropDownStyle">@style/Widget.Styled.Spinner.DropDown.ActionBar</item>
        
        <item name="android:dropDownListViewStyle">@style/Widget.Styled.ListView.DropDown</item>
        
        <item name="android:popupMenuStyle">@style/Widget.Styled.PopupMenu</item>
        <item name="android:actionBarWidgetTheme">@style/Widget.Styled</item>
		<item name="android:editTextBackground">@drawable/edit_text_holo_light</item> 
		<item name="SwipeBackLayoutStyle">@style/Widget.Styled.SwipeBackLayout</item>
		
		<item name="rowBackground">@drawable/row_backgroud</item>
		<item name="tabStripBackground">@drawable/background_tabs</item>
		<item name="tagBackground">@drawable/item_tag_background</item>
		<item name="commentsBarBackgroud">@drawable/comments_bar_backgroud</item>
		<item name="commentItemBackground">@android:color/white</item>
		<item name="commentFloorBackground">@drawable/comment_floor_bg</item>
		<item name="commentItemTextColorSelector">@color/text_color_selector</item>
		<item name="requoteBackground">@drawable/requote_bg</item>
		<item name="android:textColorLink">@color/main_color</item>
		<item name="searchPlateBackground">@drawable/search_bg</item>
    </style>
    <style name="AppTheme.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
	<style name="Widget.Styled" parent="Theme.AppCompat">
        <item name="android:popupMenuStyle">@style/Widget.Styled.PopupMenu</item>
        
        <item name="android:dropDownListViewStyle">@style/Widget.Styled.ListView.DropDown</item>
    </style>

    <style name="Widget.Styled.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/main_color</item>
    </style>
    
    <style name="Widget.Styled.Spinner.DropDown.ActionBar" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_ab</item>
    </style>
    
    <style name="Widget.Styled.PopupMenu" parent="Widget.AppCompat.ListPopupWindow">
        <item name="android:dropDownSelector">@drawable/item_background</item>
    </style>
    
    <style name="Widget.Styled.ActionButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">?attr/actionBarItemBackground</item>
    </style>
    
    <style name="Widget.Styled.ListView.DropDown" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/abc_list_selector_holo_dark</item>
    </style>
    
</resources>