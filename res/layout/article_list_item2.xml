<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:padding="4dp"
    android:orientation="vertical" >
    <ImageView
	    android:id="@+id/article_title_img"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignLeft="@+id/article_item_info"
	    android:layout_alignTop="@+id/article_item_info"
	    android:layout_alignBottom="@+id/article_item_info"
	    android:layout_alignRight="@+id/article_item_info"
	    />
    <LinearLayout
        android:id="@+id/article_item_info"
        android:layout_width="wrap_content"
        android:layout_height="66dip"
        android:gravity="center|right"
        android:minWidth="66dip"
        android:orientation="vertical"
        android:background="@drawable/article_info_bg_selector"
        android:padding="4dip" >

        <TextView
            android:id="@+id/article_item_views"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="102352"
            android:textColor="#fff"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:text="围观"
            android:textColor="#fff"
            android:textSize="12sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/article_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_toRightOf="@id/article_item_info"
        android:singleLine="true"
        android:text="作为一个AC基佬就不能有正常的感情吗 还是我做的一直都是错的"
        android:textColor="@color/article_title_color_selector"
        android:textSize="16sp" />
	<TextView 
	    android:id="@+id/article_item_post_time"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/article_item_title"
	    android:textSize="12sp"
	    android:textColor="@color/text_color_gray"
        android:layout_marginTop="8dip"
        android:text="5月20日 14时38分 "
        android:singleLine="true"
        android:layout_alignLeft="@id/article_item_title"
	    />
    <TextView
        android:id="@+id/article_item_upman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/article_item_info"
        android:layout_below="@+id/article_item_post_time"
        android:layout_marginTop="4dip"
        android:layout_alignLeft="@id/article_item_title"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_color_gray"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/article_item_comments"
        android:layout_marginLeft="10dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_item_post_time"
        android:layout_marginTop="4dip"
        android:layout_toRightOf="@id/article_item_upman"
        android:singleLine="true"
        android:textSize="12sp" />


</RelativeLayout>